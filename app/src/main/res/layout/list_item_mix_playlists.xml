<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewHolder"
            type="kg.delletenebre.yamus.ui.mix.playlists.PlaylistsAdapter.ViewHolder" />
        <variable
            name="item"
            type="kg.delletenebre.yamus.api.response.Playlist" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewHolder.onClick(item)}">

            <ImageView
                    android:id="@+id/cover"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"
                    app:glideImgSrc="@{item.ogImage}"
                    app:glideImgSize="@{400}" />

            <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{item.title}"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/cover"
                    app:layout_constraintLeft_toLeftOf="@id/cover"
                    />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@plurals/tracks_count(item.trackCount, item.trackCount)}"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintLeft_toLeftOf="@id/title"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>