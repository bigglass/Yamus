                android:interpolator="@android:anim/linear_interpolator"
                android:propertyName="pathData"
                android:valueType="pathType"
                android:valueFrom="M 11.245 16.795 L 19 12.14 L 19 12.14 L 11.245 7.205 Z"
                android:valueTo="M 14 19           L 18 19    L 18 5     L 14 5 Z" />
        </aapt:attr>
